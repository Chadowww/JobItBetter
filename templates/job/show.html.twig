{% extends 'base.html.twig' %}

{% block title %}Emploi {{ job.id }}{% endblock %}

{% block body %}
    <h1>Emploi {{ job.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ job.name }}</td>
            </tr>
        </tbody>
    </table>

    <p>Catégorie : {{ job.category.name }}</p>

    <a href="{{ path('app_job_index') }}">Retour à la liste</a>

    <a href="{{ path('app_job_edit', {'id': job.id}) }}">Modifier</a>

    {{ include('job/_delete_form.html.twig') }}
{% endblock %}
