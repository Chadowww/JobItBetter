<div{{ attributes }}>
    {{ form_start(this.form, {
        attr: {
            class: 'form-accordion accordion p-0 position-relative bg-white',
        }
    }) }}
    <div class="be-joboffer-card-template  sticky-element p-2">
        <h2 class=" py-4 fs-5 m-0 w-100 d-flex justify-content-center text-center be-h2 ">Affinez votre
            <span>&nbsp recherche</span>
        </h2>
        <div class="my-3 d-flex justify-content-center">
            {{ form_widget(this.form.q, {
                attr: {
                    class: 'w-75 '
                }
            }) }}
        </div>
        <div class="mt-3 d-flex justify-content-around">
            {{ form_widget(this.form.minSalary, {
                attr: {
                    class: 'w-25',
                    value: this.min
                }
            }) }}

            {{ form_widget(this.form.maxSalary, {
                attr: {
                    class: 'w-25',
                    value: this.max
                }
            }) }}
        </div>
        <div class="d-flex justify-content-center">
            <div id="salary-slider" class="my-2 w-75" data-min="{{ this.min }}" data-max="{{ this.max }}"></div>
        </div>
        <div class="my-3 d-flex justify-content-around flex-wrap">
            {{ form_widget(this.form.contract,{
                attr: {
                    class: 'w-75 d-flex justify-content-around flex-wrap'
                }
            }) }}
        </div>
        <div class="my-3 d-flex justify-content-center">
            {{ form_widget(this.form.city, {
                attr: {
                    class: 'w-75',
                }
            }) }}
        </div>
        <div class="my-3 d-flex justify-content-center">
            {{ form_widget(this.form.submit) }}
        </div>
    </div>
    {{ form_end(this.form) }}
</div>
