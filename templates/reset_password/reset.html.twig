{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <h1 class="text-center">Réinitialiser votre mot de passe</h1>

    {{ form_start(resetForm, {'attr': {'class': 'row g-3 be-form my-6'}}) }}
    {% for message in error %}
        <div class="alert alert-danger">
                {{ message.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endfor %}

    <div class="my-4 col-md-6">
        {{ form_row(resetForm.plainPassword.first, {'attr': {'class': 'form-control p-0 be-form-input col-10',
            'placeholder':
            'Votre nouveau mot de passe.', 'aria-label': 'Search', 'name': 'what',
        }}) }}
        {{ form_row(resetForm.plainPassword.second, {'attr': {'class': 'form-control p-0 be-form-input col-10',
            'placeholder':
            'Entrez à nouveau le mot de passe.', 'aria-label': 'Search', 'name': 'what',
        }}) }}
    </div>
    <div class="d-flex justify-content-center">
        <button class="be-primary-button mb-4">Réinitialiser</button>
    </div>
    {{ form_end(resetForm) }}
{% endblock %}
