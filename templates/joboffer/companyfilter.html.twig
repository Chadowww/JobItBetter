{% extends 'base.html.twig' %}

{% block title %}
    Offres
{% endblock %}

{% block body %}

    <div class="offcanvas offcanvas-start bg-transparent border-0" tabindex="-1" id="offcanvasExample"
         aria-labelledby="offcanvas2ExampleLabel">

        <div class="form-offcanvas offcanvas-body d-flex align-items-center">

        </div>
    </div>

    <h1 class="w-100 d-flex justify-content-center m-0 mb-5 text-center fw-bold be-h2">
        Votre prochain emploi est peut-être parmis<span> ces annonces</span>
    </h1>

    <div class="w-50 m-auto d-flex justify-content-center flex-wrap">
        {% if app.request.query.all.joboffer_filter is defined %}
            {% for parameter in app.request.query.all.joboffer_filter  %}

                {% if parameter is iterable %}
                    {% for contract in parameter %}
                        <span class="badge badge-info bg-info m-1 m-md-2 fs-6">{{ contract }}</span>
                    {% endfor %}
                {% endif %}

                {% if parameter is not iterable %}
                    <span class="badge badge-info bg-info m-1 m-md-2 fs-6">{{ parameter }}</span>
                {% endif %}

            {% endfor %}
        {% endif %}
    </div>

    <button class="btn btn-primary m-2 d-xl-none" type="button" data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasExample"
            aria-controls="offcanvasExample">
        <i class="bi bi-funnel text-white"></i> Filtrez votre recherche
    </button>

    <div class=" form-accordion-parent d-flex justify-content-around ">

        {{ form_start(form, {
            attr: {
                class: 'form-accordion accordion p-0 position-relative bg-white',
            }
        }) }}
            <div class="be-joboffer-card-template  sticky-element p-2">
                <h2 class=" py-4 fs-5 m-0 w-100 d-flex justify-content-center text-center be-h2 ">Affinez votre
                    <span>&nbsp recherche</span>
                </h2>
                <div class="my-3 d-flex justify-content-center">
                    {{ form_widget(form.q, {
                        attr: {
                            class: 'w-75 '
                        }
                    }) }}
                </div>
                <div class="mt-3 d-flex justify-content-around">
                    {{ form_widget(form.minSalary, {
                        attr: {
                            class: 'w-25',
                            value: min
                        }
                    }) }}

                    {{ form_widget(form.maxSalary, {
                        attr: {
                            class: 'w-25',
                            value: max
                        }
                    }) }}
                </div>
                <div class="d-flex justify-content-center">
                    <div id="salary-slider" class="my-2 w-75" data-min="{{ min }}" data-max="{{ max }}"></div>
                </div>
                <div class="my-3 d-flex justify-content-around flex-wrap">
                    {{ form_widget(form.contract,{
                        attr: {
                            class: 'w-75 d-flex justify-content-around flex-wrap'
                        }
                    }) }}
                </div>
                <div class="my-3 d-flex justify-content-center">
                    {{ form_widget(form.city, {
                        attr: {
                            class: 'w-75',
                        }
                    }) }}
                </div>
                <div class="my-3 d-flex justify-content-center">
                    {{ form_widget(form.submit) }}
                </div>
            </div>
        {{ form_end(form) }}

        <div class="col-10 col-md-7 col-xl-6 px-2">
            <ul class="be-joboffer-card-template-ul w-100 m-0 px-2">
                {% if joboffers is empty %}
                    <h2 class="text-center mt-5">Aucun résultat pour votre recherche</h2>
                {% endif %}
                {% for joboffer in joboffers %}
                    <li class="mb-3">
                    <div class="card be-joboffer-card-template w-100 px-2">
                        <div class="card-body">
                            <div class="row">
                                <h5 class="card-title text-secondary fs-6 col-10">{{ joboffer.company.name }}</h5>
                                {% if is_granted('ROLE_USER')%}
                                    <a class="col-2" id="favlist" href="{{ path('app_joboffer_favlist', {id: joboffer.id})}}" onclick="addToFavlist(event)">
                                        <i class=" fa-2x bi {{ app.user.isInFavlist(joboffer) ? 'bi-bookmark-x-fill' : 'bi-bookmark-plus' }}"></i>
                                    </a>
                                {% endif %}
                            </div>
                            <h5 class="card-title mb-3 fs-5">{{ joboffer.contract.type }} - {{ joboffer.title }}</h5>
                            <div class="d-flex flex-column-reverse">
                                <footer class="text-secondary fs-6">{{ joboffer.city }} / {{ joboffer.salaryMin }}€ -
                                    {{ joboffer.salaryMax }}€</footer>
                                <div class="d-flex flex-row justify-content-between">
                                    <footer class="text-secondary w-50 fs-6">Annonce postée le {{ joboffer.createdAt|date('d/m/Y') }}</footer>
                                    <a href="{{ path('app_joboffer_show', {id: joboffer.id}) }}" class="be-secondary-button w-15 fs-5">Voir l'offre</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </li>
                {% endfor %}
            </ul>
        </div>

        <div class="d-none d-md-block col-md-3 m-0 p-0 position-relative">
            <div class="sticky-element">

                {% if app.user.id is defined %}
                    {{ component('AlerteComponent', { 'applicant': app.user.id, null }) }}
                {% endif %}

                <div class="card be-card-candidatures" style="width: 100%; min-height: 13.75rem;">
                    <div class="card-header be-candidature fw-bold">
                        Nouveaux CV arrivés
                    </div>
                    <div class="card-body">

                        {% for resume in lastResumes %}
                            <h5 class="card-title text-center be-h2">
                                {{ resume.name }} <br>
                                <a href="{{ path('app_resume_read', {id: resume.id}) }}" class="">
                                    <span>{{ resume.getUser.getFirstName }} {{ resume.getUser.getLastName }}</span>
                                </a>
                            </h5>

                        {% endfor %}
                        <p class="card-text"></p>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <div class="navigation d-flex justify-content-center my-5">
        {{ knp_pagination_render(joboffers) }}
    </div>
{% endblock %}
