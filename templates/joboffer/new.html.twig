{% extends 'base.html.twig' %}

{% block title %}New Joboffer{% endblock %}

{% block body %}
    <div class="be-form row g-3 col-7">
        <div class="d-flex m-4">
            <a class="be-secondary-button " href="{{ path('app_user_show', {'id': app.user.id} ) }}">Retour aux offres</a>
        </div>
        <h2 class="be-h2">Cr√©ation d'une nouvelle offre</h2>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row px-4">
            <div class="col-md-6">
                {{ form_row(form.title) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.city) }}
            </div>
        </div>
        <div class="row px-4">
            <div class="col-md-6">
                {{ form_row(form.job) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.contract) }}
            </div>
        </div>
        <div class="row px-4">
            <div class="col-md-6">
                {{ form_row(form.salaryMin) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.salaryMax) }}
            </div>
        </div>
        <div class="col-12 px-4">
            {{ form_row(form.company) }}
        </div>
        <div class="col-12 px-4" >
            {{ form_row(form.description) }}
        </div>
        <div class="text-center my-4">
            <button class="be-primary-button" type="submit">Postuler</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
