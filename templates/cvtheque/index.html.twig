{% extends 'base.html.twig' %}

{% block title %}Hello CvthequeController!{% endblock %}

{% block body %}
{#    {{ dump(form) }}#}
    <div class="row">
        <div class="col-3 position-relative">
    {{ form_start(form, {
        attr: {
            'class': 'accordion sticky-element',
            'id': 'accordionExample'
        }
    }) }}
    {% set currentCategoryKey = '' %}
    {% set currentCategoryLabel = '' %}
    {% set categoryCounter = 0 %}

    {% for key in form.children %}
        {% if key.vars.name starts with 'category_' %}
{#             Fermer la div parent précédente si nécessaire#}
            {% if currentCategoryKey is not empty %}
                </div>
                </div>
                </div>
            {% endif %}

            {% set categoryCounter = categoryCounter + 1 %}

            {% set currentCategoryKey = key.vars.name %}
            {% set currentCategoryLabel = key.vars.label %}
            <div class="parent accordion-item">
            <h2 class="accordion-header" id="heading{{ categoryCounter }}">
                <button class="accordion-button p-2 fw-bold" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapse{{
                categoryCounter }}"
                        aria-expanded="true" aria-controls="collapse{{ categoryCounter }}">
                    {{ form_widget(key, {
                        attr: {
                            'class': 'd-none'
                        }
                    }) }}
                    {{ form_label(key) }}
                </button>
            </h2>
            <div id="collapse{{ categoryCounter }}" class="accordion-collapse collapse show">
            <div class="accordion-body d-flex  justify-content-around align-content-around flex-wrap p-2">
        {% else %}
            {% if currentCategoryKey is not empty %}
                <div>
                    {{ form_widget(key) }}
                    {{ form_label(key) }}
                </div>
            {% endif %}
        {% endif %}
    {% endfor %}

{#     Fermer la dernière div parent si nécessaire#}
    {% if currentCategoryKey is not empty %}
        </div>
        </div>
        </div>
    {% endif %}
    {{ form_end(form) }}
        </div>
        <div class="col-7">
                <ul class="be-joboffer-card-template-ul">
                    {% for resume in resumes %}
                        <li class="">
                            <div class="card be-joboffer-card-template mb-4 w-100">
                                <div class="card-body">
                                    <div class="row">
                                        <h5 class="card-title mb-3 fs-5">
                                            {{ resume.getUser.getFirstName }} {{ resume.getUser.getLastName }} - {{ resume
                                            .name }}
                                        </h5>
                                        {% if is_granted('ROLE_USER') and not is_granted('ROLE_COMPANY')%}
                                            <a class="col-2" id="favlist" href="{{ path('app_joboffer_favlist', {id: joboffer.id})}}" onclick="addToFavlist(event)">
                                                <i class=" fa-2x bi {{ app.user.isInFavlist(joboffer) ? 'bi-bookmark-x-fill' : 'bi-bookmark-plus' }}"></i>
                                            </a>
                                        {% endif %}
                                    </div>
                                    <h5 class="card-title text-secondary fs-6 col-10">Ses compétences</h5>
                                    <div class="d-flex justify-content-between row">
                                        <div class="col-8">
                                            {% for technology in resume.technology %}
                                                {{ technology.getName }} ||
                                            {% endfor %}
                                        </div>
                                        <div class="col-4 col-md-3 col-lg-3 col-xl-3 col-xxl-4 ">
                                            <div>
                                                <a href="{{ path('app_resume_read', {id: resume.id}) }}" class="be-secondary-button w-15 fs-5">Voir le cv</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>

                    {% endfor %}
                </ul>
            </div>

        </div>
        <div class="navigation d-flex justify-content-center">
            {{ knp_pagination_render(resumes) }}
        </div>
    </div>
{% endblock %}
