{% extends 'base.html.twig' %}

{% block title %}Recherches{% endblock %}

{% block body %}
    <h1>Recherches</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for search in searches %}
            <tr>
                <td>{{ search.id }}</td>
                <td>{{ search.city }}</td>
                <td>
                    <a href="{{ path('app_search_show', {'id': search.id}) }}">Voir</a>
                    <a href="{{ path('app_search_edit', {'id': search.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_search_new') }}">Cr√©er nouveau</a>
{% endblock %}
